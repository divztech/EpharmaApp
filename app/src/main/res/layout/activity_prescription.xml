<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:alpha="0.9"
        android:background="#F8AD40C8"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/prec" />

    <EditText
        android:id="@+id/no_field"
        android:layout_width="189dp"
        android:layout_height="43dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="308dp"
        android:ems="10"
        android:fontFamily="@font/domine"
        android:hint="Enter patient id"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prescrip_label"
        android:layout_width="318dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/domine"
        android:text="For  Prescription details:"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prescrip_label2"
        android:layout_width="178dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/domine"
        android:text="Please enter:-"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pat_label"
        android:layout_width="145dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="316dp"
        android:fontFamily="@font/domine"
        android:text="Patient id:"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hid_label2"
        android:layout_width="188dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/domine"
        android:text="Hospital Name:"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backbutton2"
        android:layout_width="83dp"
        android:layout_height="38dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="676dp"
        android:background="#B4252125"
        android:text="Back"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:cornerRadius="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="676dp"
        android:background="#B5272227"
        android:text="Next"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:cornerRadius="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:entries="@array/names"
        android:outlineAmbientShadowColor="#A81D1D"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
